{
    "meta": {
        "name": "TA-thehive-cortex",
        "displayName": "TheHive-Cortex",
        "version": "2.0.0",
        "apiVersion": "3.0.0",
        "restRoot": "TA_thehive_cortex"
    },
    "pages": {
        "configuration": {
            "title": "Configuration",
            "description": "Set up your add-on",
            "tabs": [
                {
                    "name": "account",
                    "title": "TheHive_Cortex_instances",
                    "table": {
                        "header": [
                            {
                                "field": "name",
                                "label": "TheHive-Cortex instance"
                            },
                            {
                                "field": "thehive_hostname", 
                                "label": "Instance hostname"
                            },
                            {
                                "field": "thehive_port",
                                "label": "Instance port" 
                            
                            }
                        ],
                        "actions": [
                            "edit",
                            "delete",
                            "clone"
                        ]
                    },
                    "entity": [
                        {
                            "field": "name",
                            "label": "TheHive-Cortex instance",
                            "type": "text",
                            "required": true,
                            "help": "Enter a unique name for this TheHive-Cortex instance.",
                            "validators": [
                                {
                                    "type": "string",
                                    "minLength": 1,
                                    "maxLength": 50,
                                    "errorMsg": "Length of TheHive-Cortex instance name should be between 1 and 50"
                                },
                                {
                                    "type": "regex",
                                    "pattern": "^[a-zA-Z]\\w*$",
                                    "errorMsg": "TheHive-Cortex instance name must start with a letter and followed by alphabetic letters, digits or underscores."
                                }
                            ]
                        },
                        {
                            "field": "thehive_hostname",
                            "label": "Instance hostname",
                            "type": "text",
                            "required": true, 
                            "help": "provide TheHive-Cortex hostname", 
                            "options": {
                                "placeholder": "thehive-or-cortex.instance.org"
                            }, 
                            "validators": [
                                {
                                    "pattern": "^[0-9a-zA-Z\\-\\.]+$", 
                                    "errorMsg": "Invalid hostname.", 
                                    "type": "regex"
                                }
                            ]
                        }, 
                        {
                            "label": "Port", 
                            "field": "thehive_port",
                            "required": true,
                            "validators": [
                                {
                                    "range": [
                                        1, 
                                        65535
                                    ], 
                                    "type": "number"
                                }
                            ], 
                            "type": "text"
                        },
                        {
                            "label": "Instance type", 
                            "field": "thehive_type", 
                            "defaultValue": "thehive", 
                            "options": {
                                "autoCompleteFields": [
                                    {
                                        "label": "thehive", 
                                        "value": "thehive"
                                    }, 
                                    {
                                        "label": "cortex", 
                                        "value": "cortex"
                                    }
                                ], 
                                "disableSearch": true
                            }, 
                            "type": "singleSelect"
                        }, 
                        {
                            "field": "thehive_key", 
                            "required": true, 
                            "label": "Instance API key", 
                            "options": {
                                "placeholder": "***AUTH KEY***"
                            }, 
                            "encrypted": true, 
                            "validators": [
                                {
                                    "minLength": 0, 
                                    "errorMsg": "Max length of API key is 8192", 
                                    "maxLength": 8192, 
                                    "type": "string"
                                }
                            ], 
                            "help": "provide one authkey for the instance", 
                            "type": "text"
                        },
                        {
                            "required": false, 
                            "label": "Check instance certificate", 
                            "field": "thehive_verifycert", 
                            "defaultValue": true, 
                            "help": "", 
                            "type": "checkbox"
                        }, 
                        {
                            "required": false,
                            "label": "Instance CA path",
                            "field": "thehive_ca_full_path",
                            "validators": [
                                {
                                    "minLength": 0,
                                    "errorMsg": "Max length of text input is 8192",
                                    "maxLength": 8192,
                                    "type": "string"
                                }
                            ],
                            "help": "Provide full path to CA file (pem, crt)",
                            "type": "text"
                        },
                        {
                            "required": false, 
                            "field": "thehive_use_proxy", 
                            "help": "Use proxy settings for default instance", 
                            "label": "Use proxy settings", 
                            "type": "checkbox"
                        }, 
                        {
                            "required": false, 
                            "field": "client_use_cert", 
                            "help": "Use a client certificate to authenticate on default instance", 
                            "label": "Use a client certificate", 
                            "type": "checkbox"
                        }, 
                        {
                            "required": false, 
                            "label": "Client certificate file", 
                            "field": "client_cert_full_path", 
                            "validators": [
                                {
                                    "minLength": 0, 
                                    "errorMsg": "Max length of text input is 8192", 
                                    "maxLength": 8192, 
                                    "type": "string"
                                }
                            ], 
                            "help": "Provide full path to client certificate file ", 
                            "type": "text"
                        } 
                    ]
                },
                {
                    "name": "logging",
                    "title": "Logging",
                    "entity": [
                        {
                            "field": "loglevel",
                            "label": "Log level",
                            "type": "singleSelect",
                            "options": {
                                "disableSearch": true,
                                "autoCompleteFields": [
                                    {
                                        "label": "DEBUG",
                                        "value": "DEBUG"
                                    },
                                    {
                                        "label": "INFO",
                                        "value": "INFO"
                                    },
                                    {
                                        "label": "WARNING",
                                        "value": "WARNING"
                                    },
                                    {
                                        "label": "ERROR",
                                        "value": "ERROR"
                                    },
                                    {
                                        "label": "CRITICAL",
                                        "value": "CRITICAL"
                                    }
                                ]
                            },
                            "defaultValue": "INFO"
                        }
                    ]
                },
                {
                    "name": "additional_parameters",
                    "title": "Add-on Settings",
                    "entity": [
                        {
                            "field": "cortex_max_jobs",
                            "label": "Cortex: Max jobs",
                            "type": "text",
                            "help": "Maximum number of jobs returned",
                            "required": true,
                            "defaultValue": "100",
                            "validators": [
                                {
                                    "type": "string",
                                    "minLength": 0,
                                    "maxLength": 8192,
                                    "errorMsg": "Max length of text input is 8192"
                                }
                            ]
                        },
                        {
                            "field": "cortex_sort_jobs",
                            "label": "Cortex: Sort jobs",
                            "type": "text",
                            "help": "Sort Cortex jobs by",
                            "required": true,
                            "defaultValue": "-createdAt",
                            "validators": [
                                {
                                    "type": "string",
                                    "minLength": 0,
                                    "maxLength": 8192,
                                    "errorMsg": "Max length of text input is 8192"
                                }
                            ]
                        },
                        {
                            "field": "thehive_max_cases",
                            "label": "TheHive: Max cases",
                            "type": "text",
                            "help": "Maximum number of cases returned",
                            "required": true,
                            "defaultValue": "100",
                            "validators": [
                                {
                                    "type": "string",
                                    "minLength": 0,
                                    "maxLength": 8192,
                                    "errorMsg": "Max length of text input is 8192"
                                }
                            ]
                        },
                        {
                            "field": "thehive_sort_cases",
                            "label": "TheHive: Sort cases",
                            "type": "text",
                            "help": "Sort TheHive cases by",
                            "required": true,
                            "defaultValue": "-startDate",
                            "validators": [
                                {
                                    "type": "string",
                                    "minLength": 0,
                                    "maxLength": 8192,
                                    "errorMsg": "Max length of text input is 8192"
                                }
                            ]
                        }
                    ]
                }
            ]
        }
    }
}