{
    "meta": {
        "name": "TA-thehive-cortex",
        "displayName": "TheHive-Cortex",
        "version": "2.1.0",
        "apiVersion": "3.0.0",
        "restRoot": "TA_thehive_cortex"
    },
    "pages": {
        "configuration": {
            "title": "Configuration",
            "description": "Set up your add-on",
            "tabs": [
                {
                    "name": "account",
                    "title": "Account",
                    "table": {
                        "header": [
                            {
                                "field": "name",
                                "label": "Account name"
                            },
                            {
                                "field": "username",
                                "label": "Username"
                            }
                        ],
                        "actions": [
                            "edit",
                            "delete",
                            "clone"
                        ]
                    },
                    "entity": [
                        {
                            "field": "name",
                            "label": "Account name",
                            "type": "text",
                            "required": true,
                            "help": "Enter a unique name for this account.",
                            "validators": [
                                {
                                    "type": "string",
                                    "minLength": 1,
                                    "maxLength": 50,
                                    "errorMsg": "Length of Account name should be between 1 and 50"
                                },
                                {
                                    "type": "regex",
                                    "pattern": "^[a-zA-Z]\\w*$",
                                    "errorMsg": "Account name must start with a letter and followed by alphabetic letters, digits or underscores."
                                }
                            ]
                        },
                        {
                            "field": "username",
                            "label": "Username",
                            "type": "text",
                            "required": true,
                            "help": "Enter the username for this account.",
                            "options": {
                                "placeholder": "Enter the username here"
                            },
                            "validators": [
                                {
                                    "type": "string",
                                    "minLength": 1,
                                    "maxLength": 200,
                                    "errorMsg": "Length of username should be between 1 and 200"
                                }
                            ]
                        },
                        {
                            "field": "password",
                            "label": "Password",
                            "type": "text",
                            "encrypted": true,
                            "required": true,
                            "help": "Enter the password for this account.",
                            "validators": [
                                {
                                    "type": "string",
                                    "minLength": 1,
                                    "maxLength": 8192,
                                    "errorMsg": "Length of password should be between 1 and 8192"
                                }
                            ]
                        }
                    ]
                },
                {
                    "name": "logging",
                    "title": "Logging",
                    "entity": [
                        {
                            "field": "loglevel",
                            "label": "Log level",
                            "type": "singleSelect",
                            "options": {
                                "disableSearch": true,
                                "autoCompleteFields": [
                                    {
                                        "label": "DEBUG",
                                        "value": "DEBUG"
                                    },
                                    {
                                        "label": "INFO",
                                        "value": "INFO"
                                    },
                                    {
                                        "label": "WARNING",
                                        "value": "WARNING"
                                    },
                                    {
                                        "label": "ERROR",
                                        "value": "ERROR"
                                    },
                                    {
                                        "label": "CRITICAL",
                                        "value": "CRITICAL"
                                    }
                                ]
                            },
                            "defaultValue": "INFO"
                        }
                    ]
                },
                {
                    "name": "additional_parameters",
                    "title": "Add-on Settings",
                    "entity": [
                        {
                            "field": "cortex_max_jobs",
                            "label": "Cortex: Max jobs",
                            "type": "text",
                            "help": "Maximum number of jobs returned",
                            "required": true,
                            "defaultValue": "100",
                            "validators": [
                                {
                                    "type": "string",
                                    "minLength": 0,
                                    "maxLength": 8192,
                                    "errorMsg": "Max length of text input is 8192"
                                }
                            ]
                        },
                        {
                            "field": "cortex_sort_jobs",
                            "label": "Cortex: Sort jobs",
                            "type": "text",
                            "help": "Sort Cortex jobs by",
                            "required": true,
                            "defaultValue": "-createdAt",
                            "validators": [
                                {
                                    "type": "string",
                                    "minLength": 0,
                                    "maxLength": 8192,
                                    "errorMsg": "Max length of text input is 8192"
                                }
                            ]
                        },
                        {
                            "field": "thehive_max_cases",
                            "label": "TheHive: Max cases",
                            "type": "text",
                            "help": "Maximum number of cases returned",
                            "required": true,
                            "defaultValue": "100",
                            "validators": [
                                {
                                    "type": "string",
                                    "minLength": 0,
                                    "maxLength": 8192,
                                    "errorMsg": "Max length of text input is 8192"
                                }
                            ]
                        },
                        {
                            "field": "thehive_sort_cases",
                            "label": "TheHive: Sort cases",
                            "type": "text",
                            "help": "Sort TheHive cases by",
                            "required": true,
                            "defaultValue": "-startDate",
                            "validators": [
                                {
                                    "type": "string",
                                    "minLength": 0,
                                    "maxLength": 8192,
                                    "errorMsg": "Max length of text input is 8192"
                                }
                            ]
                        },
                        {
                            "field": "thehive_max_alerts",
                            "label": "TheHive: Max alerts",
                            "type": "text",
                            "help": "Maximum number of alerts returned",
                            "required": true,
                            "defaultValue": "100",
                            "validators": [
                                {
                                    "type": "string",
                                    "minLength": 0,
                                    "maxLength": 8192,
                                    "errorMsg": "Max length of text input is 8192"
                                }
                            ]
                        },
                        {
                            "field": "thehive_sort_alerts",
                            "label": "TheHive: Sort alerts",
                            "type": "text",
                            "help": "Sort TheHive alerts by",
                            "required": true,
                            "defaultValue": "-date",
                            "validators": [
                                {
                                    "type": "string",
                                    "minLength": 0,
                                    "maxLength": 8192,
                                    "errorMsg": "Max length of text input is 8192"
                                }
                            ]
                        }
                    ]
                }
            ]
        }
    }
}