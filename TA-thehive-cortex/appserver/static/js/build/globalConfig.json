    "pages": {
        "configuration": {
            "title": "Configuration",
            "description": "Set up your add-on",
            "tabs": [
                {
                    "name": "logging",
                    "title": "Logging",
                    "entity": [
                        {
                            "field": "loglevel",
                            "label": "Log level",
                            "type": "singleSelect",
                            "options": {
                                "disableSearch": true,
                                "autoCompleteFields": [
                                    {
                                        "label": "DEBUG",
                                        "value": "DEBUG"
                                    },
                                    {
                                        "label": "INFO",
                                        "value": "INFO"
                                    },
                                    {
                                        "label": "WARNING",
                                        "value": "WARNING"
                                    },
                                    {
                                        "label": "ERROR",
                                        "value": "ERROR"
                                    },
                                    {
                                        "label": "CRITICAL",
                                        "value": "CRITICAL"
                                    }
                                ]
                            },
                            "defaultValue": "INFO"
                        }
                    ]
                },
                {
                    "name": "additional_parameters",
                    "title": "Add-on Settings",
                    "entity": [
                        {
                            "field": "splunk_username",
                            "label": "Splunk: Username",
                            "type": "text",
                            "help": "To store information from Cortex, you need to provide a valid Splunk account able to store these information in a KVStore",
                            "required": true,
                            "defaultValue": "",
                            "validators": [
                                {
                                    "type": "string",
                                    "minLength": 0,
                                    "maxLength": 8192,
                                    "errorMsg": "Max length of text input is 8192"
                                }
                            ]
                        },
                        {
                            "field": "splunk_password",
                            "label": "Splunk: Password",
                            "type": "text",
                            "help": "",
                            "required": true,
                            "defaultValue": "",
                            "encrypted": true,
                            "validators": [
                                {
                                    "type": "string",
                                    "minLength": 0,
                                    "maxLength": 8192,
                                    "errorMsg": "Max length of password is 8192"
                                }
                            ]
                        },
                        {
                            "field": "cortex_max_jobs",
                            "label": "Cortex: Max jobs",
                            "type": "text",
                            "help": "Maximum number of jobs returned",
                            "required": true,
                            "defaultValue": "100",
                            "validators": [
                                {
                                    "type": "string",
                                    "minLength": 0,
                                    "maxLength": 8192,
                                    "errorMsg": "Max length of text input is 8192"
                                }
                            ]
                        },
                        {
                            "field": "cortex_sort_jobs",
                            "label": "Cortex: Sort jobs",
                            "type": "text",
                            "help": "Sort Cortex jobs by",
                            "required": true,
                            "defaultValue": "-createdAt",
                            "validators": [
                                {
                                    "type": "string",
                                    "minLength": 0,
                                    "maxLength": 8192,
                                    "errorMsg": "Max length of text input is 8192"
                                }
                            ]
                        },
                        {
                            "field": "thehive_max_cases",
                            "label": "TheHive: Max cases",
                            "type": "text",
                            "help": "Maximum number of cases returned",
                            "required": true,
                            "defaultValue": "100",
                            "validators": [
                                {
                                    "type": "string",
                                    "minLength": 0,
                                    "maxLength": 8192,
                                    "errorMsg": "Max length of text input is 8192"
                                }
                            ]
                        },
                        {
                            "field": "thehive_sort_cases",
                            "label": "TheHive: Sort cases",
                            "type": "text",
                            "help": "Sort TheHive cases by",
                            "required": true,
                            "defaultValue": "-startDate",
                            "validators": [
                                {
                                    "type": "string",
                                    "minLength": 0,
                                    "maxLength": 8192,
                                    "errorMsg": "Max length of text input is 8192"
                                }
                            ]
                        }
                    ]
                }
            ]
